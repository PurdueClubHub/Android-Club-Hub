<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_row="0"
            android:layout_column="0"
            android:id="@+id/Title">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Post View"
                android:id="@+id/activity_post_view_title"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="50sp"
                android:gravity="center" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="181dp"
            android:layout_row="1"
            android:layout_column="0"
            android:id="@+id/Post">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/textView_Club"
                android:layout_gravity="left|top" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/textView_poster"
                android:layout_gravity="right|top" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/textView_desc"
                android:layout_gravity="left|center_vertical" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="242dp"
            android:layout_row="2"
            android:layout_column="0"
            android:id="@+id/Comments">

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listView"
                android:layout_gravity="center|bottom|left|right|top" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="81dp"
            android:layout_row="8"
            android:layout_column="0"
            android:id="@+id/Comment_buttons">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Sort By Age"
                android:id="@+id/button_age"
                android:layout_gravity="left|top" />

            <Button
                android:layout_width="155dp"
                android:layout_height="match_parent"
                android:text="Sort By Popularity"
                android:id="@+id/button_popularity"
                android:layout_gravity="center_horizontal|top" />

            <Button
                android:layout_width="108dp"
                android:layout_height="match_parent"
                android:text="New Comment"
                android:id="@+id/button_comment"
                android:layout_gravity="right|center_vertical" />
        </FrameLayout>
    </GridLayout>
</LinearLayout>